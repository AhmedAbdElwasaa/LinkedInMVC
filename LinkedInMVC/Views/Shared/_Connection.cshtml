@model LinkedInMVC.ViewModel.ConnectionViewModel


<div class=" col-lg-12 connection-card  ">
    <div id="m" class=" connection">
        <div class="image-container">
            <img class="image" src="@Model.ImageUrl " />
        </div>
        <div class="profile-info">

            <h2>@Html.ActionLink(Model.FirstName, "Details", "Profile", new { id = Model.UserId }, null)</h2>
            <h5 class="job">developer</h5>
        </div>
        <div class="connection-btn">
            <input type="button" value="Message" class="btn btn-accept " />
            <div class="dropdown remove-ddl">
                <i class="fas fa-ellipsis-h remove-conn" data-toggle="dropdown"></i>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @Html.ActionLink("Remove Connection", "Delete", "connection", new { id = Model.UserId }, new { @class = "dropdown-item" })
            @Ajax.ActionLink("Remove Connection", "Delete", "connection", new { id = Model.UserId },
      new AjaxOptions()
      {
          
       UpdateTargetId="m",
       InsertionMode=InsertionMode.ReplaceWith,
        

      }, new { @class = "dropdown-item" })
                </div>
            </div>
        </div>
    </div>
</div>
<div id="y"></div>
<script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
<script src="/Scripts/MicrosoftMvcAjax.js" type="text/javascript"></script>
<script type="text/javascript">
    function deleteComplete() {
        window.location.reload();
    }
</script>