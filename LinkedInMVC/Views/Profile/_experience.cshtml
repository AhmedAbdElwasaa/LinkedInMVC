@model LinkedInMVC.ViewModel.ExperienceViewModel


        <div class="experience">
            <div class="experience-data">
                <div class="btn-edit-experience"  data-toggle="modal" data-target="#EditExperienceModal"><i class="fas fa-pen"></i></div>
                <div class="company-img-container">
                    <img src="../images/Logo.png" class="company-img">
                </div>
                <div class="experience-details">
                    <h4 class="title"> @Model.Title</h4>
                    <h4 class="company-name">@Model.Company</h4>
                    <div class="date">
                        <h4 class="date-from">@Model.FromYear</h4>
                        <span> - </span>
                        <h4 class="date-to">@Model.ToYear</h4>
                    </div>
                </div>
            </div>
        </div>



        <div class="modal fade" id="EditExperienceModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Experience</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("Create", "Experiences", "Post", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.LabelFor(m => m.Title, new { @class = "Title" })
                            @Html.EditorFor(m => m.Title, new { id = "Title"  @*placeholder = "Ex: Boston University"*@});

                            <!-- <div class="Title">Degree</div>-->
                            @Html.LabelFor(m => m.Company, new { @class = "Title" })
                            @Html.EditorFor(m => m.Company, new { id = "Company"  @*placeholder = "Ex: Boston University"*@});

                            @Html.LabelFor(m => m.Location, new { @class = "Title" })
                            @Html.EditorFor(m => m.Location, new { id = "Location"  @*placeholder = "Ex: Boston University"*@});

                            <div class="date">
                                <div class="StartDate-wrapper">

                                    <div class="Title">Start Date</div>
                                    <select data-control-name="edit_education_start_year" name="startYear" id="pe-education-form__start-year" class="pe-education-form__start-year ember-view">
                                        <option value="">Year</option>
                                        @for (var i = 2019; i > 1990; i--)
                                        {
                                            <option value="@i">@i</option>
                                        }

                                    </select>
                                </div>
                                <div class="EndDate-Wrapper">
                                    <div class="Title">End Date</div>
                                    <select data-control-name="edit_education_start_year" name="startYear" id="pe-education-form__start-year" class="pe-education-form__start-year ember-view">
                                        <option value="">Year</option>
                                        @for (var i = 2019; i > 1990; i--)
                                        {
                                            <option value="@i">@i</option>
                                        }

                                    </select>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="BtnSave">Save</button>
                            </div>
                        }
                    </div>
                </div>
            </div>


        </div>

  
