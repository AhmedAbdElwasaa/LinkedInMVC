@model List<ConnectionViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class=" connection-section ">
        @foreach (ConnectionViewModel item in Model)
        {
            <div class=" col-lg-12 connection-card  ">
                <div class=" connection">
                    <div class="image-container">
                        <img class="image" src="@item.ImageUrl " />
                    </div>
                    <div class="profile-info">

                        <h2>@Html.ActionLink(@item.FirstName, "connection/index", item.UserId)</h2>
                        <h5 class="job">developer</h5>
                    </div>
                    <div class="connection-btn">
                        <input type="button" value="Message" class="btn btn-accept " />
                        <div class="dropdown remove-ddl">
                            <i class="fas fa-ellipsis-h remove-conn" data-toggle="dropdown"></i>
                            @*<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dropdown button
                                </button>*@
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @Html.ActionLink("Remove Connection",  "connection", item.UserId  )
                                @Html.ActionLink("Remove Connection","details", "profile",item.UserId,new { @class="dropdown-item"})

                                @*<a class="dropdown-item" href="#">Remove Connection</a>*@

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
