
@{
    ViewBag.Title = "Company Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid">
    <div class="row my-5">

        <div class="col-12 display-2 text-center">
            <p> Create a LinkedIn Page</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12  text-center">
            <h5>Connect with clients, employees, and the LinkedIn community. To get started, choose a page type.</h5>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-2 mr-5">

            <a class="card  card-cordinations" href="@Url.Action("Create","Company")">
                <i class="fas fa-university text-center i-color-company display-2 py-4"></i>
                <div class="card-body">
                    <h3 class="card-text text-center">Small business</h3>
                    <p class="card-text text-center">Fewer than 200 employees</p>
                </div>
            </a>
        </div>
        <div class="col-2 mr-5">
            <a class="card  card-cordinations"href="@Url.Action("Create","Company")">
                <i class="fas fa-building text-center i-color-company display-2 py-4"></i>
                <div class="card-body">
                    <h3 class="card-text text-center">Medium to large business</h3>
                    <p class="card-text text-center">More than 200 employees</p>
                </div>
            </a>

        </div>
        <div class="col-2 mr-5">
            <a class="card  card-cordinations" href="@Url.Action("Create","Company")">
                <i class="far fa-building text-center i-color-company display-2 py-4"></i>
                <div class="card-body">
                    <h3 class="card-text text-center">Small business</h3>
                    <p class="card-text text-center">Fewer than 200 employees</p>
                </div>
            </a>

        </div>
        <div class="col-2 mr-5">
            <a class="card  card-cordinations" href="@Url.Action("Create","Company")">
                <i class="fas fa-chalkboard text-center i-color-company display-2 py-4"></i>
                <div class="card-body">
                    <h3 class="card-text text-center">Showcase page</h3>
                    <p class="card-text text-center">Sub-pages associated with an existing page</p>
                </div>
            </a>

        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row mt-5 justify-content-center">
        <div class="col-6">
            <img class="img-fluid img-lap-position" src="../images/2.png" />
        </div>
        <div class="col-6">
            <img class="img-fluid img-phone-position" src="../images/1.png" />

        </div>
    </div>
</div>








